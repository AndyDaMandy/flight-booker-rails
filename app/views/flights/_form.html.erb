<%= form_tag(flights_search_path, method: :get) do %>
    <div>
        <%= label :departure_airport, "Departure Airport" %>
        <%= select_tag(:departure_airport, options_for_select(@departure_options))%>
        <%= label :arrival_airport, "Arrival Airport" %>
        <%= select_tag(:arrival_airport, options_for_select(@arrival_options))%>
        <%= label :departure_date, "Departure Date"%>
        <%= select_tag(:departure_date, options_for_select(@departure_date))%>
        <%= label :arrival_date, "Arrival Date"%>
        <%= select_tag(:arrival_date, options_for_select(@arrival_date))%>
    </div>
    <div>
    <%= submit_tag("Search for flights") %>
    </div>
<% end %>
<%= form_tag(flights_path, method: :get) do %>
    <div>
        <%= label_tag :departing_airport, "Departure Airport" %>
        <%= select_tag(:departing_airport, options_for_select(@departure_options), :include_blank => true)%>
        <%= label_tag :arrival_airport, "Arrival Airport" %>
        <%= select_tag(:arrival_airport, options_for_select(@arrival_options) , :include_blank => true)%>
        <%= label_tag :departure_date, "Departure Date"%>
        <%= select_tag(:departure_date, options_for_select(@departure_date) , :include_blank => true)%>
        <%= label_tag :arrival_date, "Arrival Date"%>
        <%= select_tag(:arrival_date, options_for_select(@arrival_date) , :include_blank => true)%>
    </div>
    <div>
    <%= submit_tag "Search" %>
    </div>
<% end %>
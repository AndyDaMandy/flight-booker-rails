<%= form_tag(search_path, method: :get) do %>
    <div>
        <%= label_tag :departing_airport_id, "Departure Airport" %>
        <%= select_tag(:departing_airport_id, options_for_select(@departure_options))%>
        <%= label_tag :arrival_airport_id, "Arrival Airport" %>
        <%= select_tag(:arrival_airport_id, options_for_select(@arrival_options))%>
        <%= label_tag :departure_date, "Departure Date"%>
        <%= select_tag(:departure_date, options_for_select(@departure_date))%>
        <%= label_tag :arrival_date, "Arrival Date"%>
        <%= select_tag(:arrival_date, options_for_select(@arrival_date))%>
    </div>
    <div>
    <%= submit_tag "Search" %>
    </div>
<% end %>